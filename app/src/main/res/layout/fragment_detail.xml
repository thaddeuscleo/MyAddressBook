<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".fragments.DetailFragment">

    <FrameLayout
        android:id="@+id/detail_item_map"
        android:layout_width="match_parent"
        android:layout_height="400dp" />

    <TextView
        android:id="@+id/detail_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/data" />

    <TextView
        android:id="@+id/detail_item_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/data" />

    <TextView
        android:id="@+id/detail_item_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/data" />

    <TextView
        android:id="@+id/detail_item_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/data" />

    <Button
        android:id="@+id/add_to_address_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_to_my_address" />

</LinearLayout>