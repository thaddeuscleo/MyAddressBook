<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_margin="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/address_item_thumbnail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="10dp"
            android:src="@color/material_dynamic_neutral_variant10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/address_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data" />

            <TextView
                android:id="@+id/address_item_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data" />

            <TextView
                android:id="@+id/address_item_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data" />

            <TextView
                android:id="@+id/address_item_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/address_email_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:layout_marginEnd="5dp"
                    android:textSize="10sp"/>

                <Button
                    android:id="@+id/address_call_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/call"
                    android:textSize="10sp"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>